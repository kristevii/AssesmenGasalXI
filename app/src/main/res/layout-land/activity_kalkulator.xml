<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KalkulatorActivity"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/etResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="0"
        android:textSize="60sp"
        android:textAlignment="textEnd"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="none"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <Button
        android:id="@+id/btBersihkan"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="AC"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btHapus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult"
        app:layout_constraintBottom_toTopOf="@+id/btTujuh"/>
    <Button
        android:id="@+id/btHapus"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="โซ"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btPM"
        app:layout_constraintLeft_toRightOf="@+id/btBersihkan"
        app:layout_constraintTop_toBottomOf="@+id/etResult"
        app:layout_constraintBottom_toTopOf="@+id/btDelapan"/>
    <Button
        android:id="@+id/btPM"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="+/-"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btBagi"
        app:layout_constraintLeft_toRightOf="@+id/btHapus"
        app:layout_constraintTop_toBottomOf="@+id/etResult"
        app:layout_constraintBottom_toTopOf="@+id/btSembilan"/>
    <Button
        android:id="@+id/btPersen"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="%"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btNol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSatu"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btNol"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="0"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btKoma"
        app:layout_constraintLeft_toRightOf="@+id/btPersen"
        app:layout_constraintTop_toBottomOf="@+id/btDua"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btSembilan"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="9"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btKali"
        app:layout_constraintLeft_toRightOf="@id/btDelapan"
        app:layout_constraintTop_toBottomOf="@+id/btPM"
        app:layout_constraintBottom_toTopOf="@+id/btEnam"/>
    <Button
        android:id="@+id/btDelapan"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="8"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btSembilan"
        app:layout_constraintLeft_toRightOf="@+id/btTujuh"
        app:layout_constraintTop_toBottomOf="@+id/btHapus"
        app:layout_constraintBottom_toTopOf="@+id/btLima"/>
    <Button
        android:id="@+id/btTujuh"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btDelapan"
        app:layout_constraintTop_toBottomOf="@+id/btBersihkan"
        app:layout_constraintBottom_toTopOf="@+id/btEmpat"/>
    <Button
        android:id="@+id/btEnam"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="6"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btKurang"
        app:layout_constraintLeft_toRightOf="@id/btLima"
        app:layout_constraintTop_toBottomOf="@+id/btSembilan"
        app:layout_constraintBottom_toTopOf="@+id/btTiga"/>
    <Button
        android:id="@+id/btLima"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="5"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btEnam"
        app:layout_constraintLeft_toRightOf="@+id/btEmpat"
        app:layout_constraintTop_toBottomOf="@+id/btDelapan"
        app:layout_constraintBottom_toTopOf="@+id/btDua"/>
    <Button
        android:id="@+id/btEmpat"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="4"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btLima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTujuh"
        app:layout_constraintBottom_toTopOf="@+id/btSatu"/>
    <Button
        android:id="@+id/btTiga"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="3"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btTambah"
        app:layout_constraintLeft_toRightOf="@id/btDua"
        app:layout_constraintTop_toBottomOf="@+id/btEnam"
        app:layout_constraintBottom_toTopOf="@+id/btHasil"/>
    <Button
        android:id="@+id/btDua"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="2"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btTiga"
        app:layout_constraintLeft_toRightOf="@+id/btSatu"
        app:layout_constraintTop_toBottomOf="@+id/btLima"
        app:layout_constraintBottom_toTopOf="@+id/btNol"/>
    <Button
        android:id="@+id/btSatu"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="1"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="#A677CA"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btDua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEmpat"
        app:layout_constraintBottom_toTopOf="@+id/btPersen"/>

    <Button
        android:id="@+id/btTambah"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:backgroundTint="#A7A0AD"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btHasil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btTiga"
        app:layout_constraintTop_toBottomOf="@+id/btKurang" />

    <Button
        android:id="@+id/btKurang"

        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="-"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btEnam"
        app:layout_constraintTop_toBottomOf="@+id/btKali"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btTambah"/>
    <Button
        android:id="@+id/btKali"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="x"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btSembilan"
        app:layout_constraintTop_toBottomOf="@+id/btBagi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btKurang"/>
    <Button
        android:id="@+id/btBagi"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="รท"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btPM"
        app:layout_constraintTop_toBottomOf="@+id/etResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btKali"/>
    <Button
        android:id="@+id/btKoma"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="."
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btHasil"
        app:layout_constraintLeft_toRightOf="@+id/btNol"
        app:layout_constraintTop_toBottomOf="@+id/btTiga"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btHasil"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:text="="
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#A7A0AD"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btKoma"
        app:layout_constraintTop_toBottomOf="@+id/btTambah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>